<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="tempFont">
    <item name="android:textSize">20dp</item>
    <item name="android:textColor">@color/blue</item>
    <item name="android:gravity">left|center_vertical</item>
  </style>

  <style name="cityNameFont">
    <item name="android:textSize">20dp</item>
    <item name="android:textColor">@color/city_name</item>
    <item name="android:gravity">left|center_vertical</item>
  </style>

  <style name="normalFont">
    <item name="android:textSize">16dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">left|center_vertical</item>
  </style>
  <style name="ProgressBar_new" parent="@android:style/Widget.ProgressBar">
  	<item name="android:minWidth">16dip</item>
  	<item name="android:maxWidth">16dip</item>
  	<item name="android:minHeight">16dip</item>
  	<item name="android:maxHeight">16dip</item>
  </style>
  <style name="TabTextStyle" parent="@android:attr/tabWidgetStyle">
    <item name="android:textSize">15dp</item>
</style>
</resources>
