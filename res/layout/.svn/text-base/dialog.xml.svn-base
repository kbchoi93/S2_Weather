<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/dialog_top"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:gravity="center_vertical|center_horizontal">
<ImageView android:id="@+id/ImageView01" android:layout_width="450px" android:layout_height="wrap_content" android:background="@drawable/weather_popup02_top"/>
<ImageView android:id="@+id/table" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
<LinearLayout
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:background="@drawable/weather_popup02_middle"
        >
 	<ScrollView
            android:layout_width="410px"
            android:layout_height="200px"
            android:layout_gravity="center" 
            android:layout_marginTop="16px"
            android:layout_marginLeft="20px">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:id="@+id/dialog_comment" android:textSize="26px" android:lineSpacingExtra="17px" android:layout_marginTop="17px"/>
        </ScrollView>
</LinearLayout>
<ImageView android:id="@+id/ImageView02" android:layout_width="450px" android:layout_height="15px" android:background="@drawable/weather_popup02_bottom"/>
</LinearLayout>
