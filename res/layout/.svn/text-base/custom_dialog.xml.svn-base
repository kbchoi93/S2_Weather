<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root" android:orientation="vertical"
    android:layout_width="450px" android:layout_height="480px"
    android:padding="5px"
    >
    <TextView  
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="날씨이용안내"
        android:textSize="28px"
        android:textColor="#ffffff"
        />
    <TextView  
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="22px"
        android:layout_marginTop="3px"
        android:textColor="#ffffff"
        android:text="1) '날씨'에서 시간별 날씨 정보를 "
        />
    <TextView  
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="22px"
        android:layout_marginTop="3px"
        android:textColor="#ffffff"
        android:text="     조회할 수 있습니다."
        />
    <TextView  
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="22px"
        android:layout_marginTop="3px"
        android:textColor="#ffffff"
        android:text="2) '테마날씨'에서 테마별 날씨 정보를 "
        />
    <TextView  
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="22px"
        android:layout_marginTop="3px"
        android:textColor="#ffffff"
        android:text="     선택 조회할 수 있습니다."
        />
    <TextView  
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="22px"
        android:layout_marginTop="3px"
        android:textColor="#ffffff"
        android:text="3) 'Live Cam'에서 국내 지역별  라이브캠"
        />
    <TextView  
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="22px"
        android:layout_marginTop="3px"
        android:textColor="#ffffff"
        android:text="     화면을 실시간으로 검색할 수 있습니다."
        />
    <TextView  
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="이용요금"
        android:textSize="28px"
        android:layout_marginTop="9px"
        android:textColor="#ffffff"
        />
    <TextView  
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="22px"
        android:layout_marginTop="3px"
        android:textColor="#ffffff"
        android:text="1) [정보이용료]무료"
        />
    <TextView  
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="22px"
        android:layout_marginTop="3px"
        android:textColor="#ffffff"
        android:text="2) [데이터통화료]유료"
        />
    <TextView  
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="22px"
        android:layout_marginTop="3px"
        android:textColor="#ffffff"
        android:text="    데이터 요금제에 가입하시면 무료통화"
        />
    <TextView  
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="22px"
        android:layout_marginTop="3px"
        android:textColor="#ffffff"
        android:text="    혜택 및 데이터 통화료가 할인"
        />
    <TextView  
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="22px"
        android:layout_marginTop="3px"
        android:textColor="#ffffff"
        android:text="    적용됩니다."
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="72px"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:layout_width="57px"
            android:layout_height="72px"
            android:gravity="left|center_vertical"
            >
            <CheckBox
                android:layout_width="57px"
                android:layout_height="72px"
                android:clickable="false"
                android:linksClickable="false"
                android:checked="true"
                android:checkMark="@drawable/checkbtn_selector"
                android:id="@+id/custom_check"
                />
            <Button
                android:layout_width="57px"
                android:layout_height="72px"
                android:id="@+id/custom_check_button"
                />
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:textSize="28px"
            android:textColor="#ffffff"
            android:text=" 다시보지 않기"
            />
    </LinearLayout>
</LinearLayout>

