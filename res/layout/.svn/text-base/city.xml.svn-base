<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="96px"
        android:background="@drawable/status_bar_header_background"
    >
    <AutoCompleteTextView 
        android:id="@+id/name_input" 
        android:hint="도시명을 입력하십시오"
        android:imeOptions="actionDone"
        android:background="@drawable/textfield_selector"
        android:layout_gravity="center_vertical"
        android:completionThreshold="1"
        android:singleLine="true"
        android:layout_marginLeft="10dip" android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="62px"/>
        <!--  "@android:drawable/editbox_background"-->
    <LinearLayout
        android:id="@+id/search"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
    android:layout_width="wrap_content" android:layout_marginRight="10dip" android:layout_height="62px">
    <ImageButton
        android:id="@+id/searchbtn"
        android:clickable="true"
        android:background="@drawable/search_btn_selector"
        android:layout_height="62px" android:layout_width="66px"/>
    </LinearLayout>
    </LinearLayout>
    
    <ListView
        android:id="@+id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:drawSelectorOnTop="false"/>
</LinearLayout>